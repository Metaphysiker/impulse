<h5>Log in</h5>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { cy: "form_for_login" }}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: false,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-light border" %>
  </div>
<% end %>

