
<%= simple_form_for(@support_request, html: { data: { cy: "form_support_request" }}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.association :expertises, as: :select, collection: Expertise.all, label_method: :title, value_method: :id, :data => {:placeholder => 'User Name'}, input_html: {class: 'chosen-select', :data => {:placeholder => "Expertisen auswÃ¤hlen"}, multiple: true} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script>
  $( document ).ready(function() {

    $('.chosen-select').chosen({
      allow_single_deselect: true,
      no_results_text: 'Nichts gefunden',
      inherit_select_classes: false,
      search_contains: true,
      width: '100%'
    });

  });
</script>
