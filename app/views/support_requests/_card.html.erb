<div class="card b-color mb-2 support_request_card" data-cy="support_request_id" data-cy-support_request-id="<%=support_request.id%>">
  <% if false #if support_request.cover.attached? %>
    <%= image_tag support_request.cover, class: "card-img" %>
  <% end %>

  <div class="card-body">
    <p class="card-text">
      <%= l(support_request.created_at, format: "%d.%m.%Y") %> <span class="badge e-color rounded-0 text-white"><%= "Mitteilungen".upcase %></span>
    </p>
    <h5 class="card-title spaced-letters"><%= support_request.title.upcase %></h5>
    <p class="card-text"><%= support_request.content %></p>
    <% unless support_request.expertises.blank? %>
    <ul>
      <% support_request.expertises.each do |expertise| %>
        <li>
          <%= expertise.title %>
        </li>
      <% end %>
    </ul>
    <% end %>
    <p>
      <%= link_to support_request_path(support_request) do %>
        <button type="button" class="btn btn-e-color btn-sm spaced-letters text-nowrap rounded-0">MEHR ERFAHREN <%= fa_icon "chevron-right", class: "ml-2" %></button>
      <% end %>
    </p>
  </div>
  <% if true # is_current_user_admin? %>
    <div class="text-center m-2">
      <hr />
      <%= link_to 'Eintrag bearbeiten', edit_support_request_path(support_request), class: "btn btn-primary m-2", data: { cy: "edit-support_request-#{support_request.id}" } %>
      <%= link_to 'Eintrag lÃ¶schen', support_request_path(support_request), method: :delete, data: {confirm: 'Bist du sicher?'}, class: "btn btn-danger m-2", data: { cy: "delete_support_request-#{support_request.id}" } %>
    </div>
  <% end %>
</div>
