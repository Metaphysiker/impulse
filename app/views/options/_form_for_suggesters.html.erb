<% slide = option.slide || slide %>
<%#= simple_form_for(option) do |f| %>
<%= simple_form_for option, {url: create_option_for_suggesters_path, method: :post} do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :content, label: "Was möchtest du an dieser Stelle sagen?" %>
    <%#= f.input :target_slide, as: :select, collection: Slide.all, label: "Target-Slide", label_method: :name, value_method: :id, input_html: {class: 'chosen-select', :data => {:placeholder => "Slide auswählen"}, multiple: false} %>
    <%#= f.input :slide_id %>
    <div class="d-none">
      <%= f.input :target_slide, as: :select, collection: Slide.all, label: "Target-Slide", label_method: :name, value_method: :id, selected: slide.id, input_html: {class: 'chosen-select', :data => {:placeholder => "Slide auswählen"}, multiple: false} %>
      <%= f.input :slide_id, as: :select, collection: Slide.all, label: "Slide", label_method: :name, value_method: :id, selected: slide.id, input_html: {class: 'chosen-select', :data => {:placeholder => "Slide auswählen"}, multiple: false} %>
    </div>
    <%= f.input :email, label: "e-Mail, falls du benachrichtigt werden möchtest: " %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Absenden" %>
  </div>
<% end %>

<script>
  $( document ).ready(function() {
    $(".chosen-select").chosen({width: "100%"});
  });
</script>
