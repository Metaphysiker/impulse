<div class="container">
  <h1>Admin-Bereich</h1>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Lebensläufe ansehen</th>
        <th scope="col">Lebensläufe erstellen</th>
        <th scope="col">User bearbeiten</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td><%= link_to t("view_cvs"), cv_generator_my_cvs_path(user), data: {cy: "view_cvs_of_this_user_button"} %></td>
        <td><%= link_to t("create_new_cvs"), cv_generator_update_user_for_cv_page_path(user), data: {cy: "create_cvs_for_this_user_button"} %></td>
        <td><%= link_to t("edit_user"), edit_user_path(user), data: {cy: "edit_user_button"}  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
