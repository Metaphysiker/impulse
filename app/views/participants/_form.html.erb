
<%= simple_form_for(@participant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :period_start %>
    <%= f.input :period_end %>
    <%= f.input :status, as: :select, selected: @participant.status, collection: Participant.statuses, input_html: {class: 'chosen-select', :data => {:placeholder => "Status auswÃ¤hlen"}, multiple: false} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
