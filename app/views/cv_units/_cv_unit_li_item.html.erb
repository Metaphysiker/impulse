<div class="my-2 cv_unit <%= dom_id(cv_unit) %>">
  <table class="table table-striped table-bordered">
      <tr>
          <td style="width:25%">Name</td>
          <td style="width:50%"><%= cv_unit.name %></td>
          <td  style="width:25%" rowspan="4">
              <% if (cv_unit.user == current_user) || (current_user.admin?) %>
                <p>
                  <%= link_to "LÃ¶schen", remove_cv_unit_path(cv_unit), method: :post, remote: true, data: { cy: "delete_cv_unit", confirm: 'Bist du sicher?' } %>
                </p>
                <hr>
                <p>
                  <%= link_to "Eintrag bearbeiten", edit_cv_unit_path(cv_unit), data: { cy: "edit_cv_unit" } %>
                </p>
               <% end %>
            </td>
      </tr>
      <% unless cv_unit.category == "skills" %>
      <tr>
        <td>Company</td>
        <td><%= cv_unit.company %>, <%= cv_unit.location %></td>
      </tr>
      <tr>
        <td>Time</td>
        <td> <%= l(cv_unit.start_date, format: :month_year) unless cv_unit.start_date.blank? %> <%= " - #{l(cv_unit.end_date, format: :month_year)}" unless cv_unit.end_date.blank? %></td>
      </tr>
      <% end %>
      <tr>
          <td>Content</td>
          <td><%= simple_format cv_unit.content %></td>
      </tr>

  </table>
</div>
