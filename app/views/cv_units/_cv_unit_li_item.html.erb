<div class="my-2">
  <table class="table table-striped table-bordered">
      <tr>
          <td>Name</td>
          <td><%= cv_unit.name %></td>
          <td rowspan="4">
              <% if cv_unit.user == current_user %>
                <p>
                  <%= link_to "LÃ¶schen", remove_cv_unit_path(cv_unit), method: :post, remote: true %>
                </p>
                <hr>
                <p>
                  <%= link_to "Eintrag bearbeiten", edit_cv_unit_path(cv_unit) %>
                </p>
                <p>
                  <!-- Button trigger modal -->
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Launch demo modal
                  </button>

                  <!-- Modal -->
                  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <%= render 'cv_units/form_for_unit_list_update', cv_unit: cv_unit, category: cv_unit.category %>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>

                </p>
               <% end %>
            </td>
      </tr>
      <% unless cv_unit.category == "skills" %>
      <tr>
        <td>Company</td>
        <td><%= cv_unit.company %>, <%= cv_unit.location %></td>
      </tr>
      <tr>
        <td>Time</td>
        <td> <%= l(cv_unit.start_date) unless cv_unit.start_date.blank? %> <%= " - #{l(cv_unit.end_date)}" unless cv_unit.end_date.blank? %></td>
      </tr>
      <% end %>
      <tr>
          <td>Content</td>
          <td><%= simple_format cv_unit.content %></td>
      </tr>

  </table>
</div>
