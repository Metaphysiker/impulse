<%= category = "education" %>
<% text_area_id = Time.now.to_i.to_s %>


<%= simple_form_for(cv_unit) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :category %>
    <%= f.input :name %>
    <%#= f.input :content %>
    <%#= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
    <%= f.text_area :content, :id => text_area_id, :class => "tinymce", :rows => 40, :cols => 120 %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

