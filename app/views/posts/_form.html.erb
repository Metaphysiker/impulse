
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.file_field :cover %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%#= f.select :tag_ids, Tag.all.map { |c|[c.title, c.id] }, class: "chosen-select", multiple: true, data: { placeholder: "Tags" } %>
    <%= f.select :tag_ids, Tag.all.map { |c|[c.title, c.id] }, {}, {:class => "chosen-select", :multiple => true} %>
    <br />
    <br />
    <%= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= tinymce_assets %>
<%= tinymce %>


<script>
  $( document ).ready(function() {
    $(".chosen-select").chosen({width: "100%"});
  });
</script>
