<div class="card b-color mb-2 h-100">
  <% if post.cover.attached? %>
    <%= image_tag post.cover, class: "card-img" %>
  <% end %>

  <div class="card-body d-flex flex-column">
    <p class="card-text text-dark">
      <%= l(post.created_at, format: "%d.%m.%Y") %> <span class="badge e-color rounded-0 text-white"><%= "Mitteilungen".upcase %></span>
    </p>
    <h5 class="card-title spaced-letters"><%= post.title.upcase %></h5>
    <p class="card-text text-dark"><%= post.description %></p>

    <a href="<%= post_path(post) %>" class="align-self-end btn btn-sm btn-block btn-e-color rounded-0 spaced-letters text-nowrap" style="margin-top: auto;">Mehr erfahren <%= fa_icon "chevron-right", class: "ml-2" %></a>

  </div>
</div>
