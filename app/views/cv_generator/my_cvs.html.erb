<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="mx-auto">
      <h1 class="fw-light">Lebenslauf erstellen</h1>
      <div class="">
        <p class="">
          <ol class="fs-5" style="display: inline-block; text-align: left;">
            <li class="">
                Wählen Sie das CV aus, welches Ihnen am besten gefällt.
              </li>
          </ol>
        </p>
      </div>
    </div>
  </div>
</section>

<section class="py-1 text-center container-fluid">
<hr />
  <% @user.cvs.each do |cv| %>
  <div class="row">
      <div class="col-6">
        <div class="ratio" style="padding-bottom: 141.42%;">
          <iframe  class="embed-responsive-item" src="<%= rails_blob_path(cv.pdf) if cv.pdf.attached? %>"></iframe>
        </div>
      </div>
      <div class="col-6">
        <h3>Download:
          <% if cv.odt.attached? %>
            <%= link_to cv.odt.filename, rails_blob_path(cv.odt, disposition: "attachment") %>
          <% else %>
            Fehler - odt-Datei konnte nicht erstellt werden
          <% end %>
        </h3>
        <%#= link_to cv.odt.filename, rails_blob_path(cv.odt, disposition: "attachment") %></h3>
        <h3>Vorlage: <%#= link_to file_name.capitalize, generate_single_cv_path(file_name: file_name) %></h3>
      </div>
  </div>
  <hr />
  <% end %>
  <hr />
  <% ["bluey", "substantial"].each do |file_name| %>
  <div class="row">
      <div class="col-6">
        <div class="ratio" style="padding-bottom: 141.42%;">
          <iframe  class="embed-responsive-item" src="<%= show_public_pdf_inline_path(file_name) %>"></iframe>
        </div>
      </div>
      <div class="col-6">
        <h3>Vorlage: <%= link_to file_name.capitalize, generate_single_cv_path(file_name: file_name) %></h3>
      </div>
  </div>
  <hr />
  <% end %>
</section>
