
<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, as: :select, collection: Message.categories, input_html: {class: 'chosen-select', :data => {:placeholder => "Option auswählen"}, multiple: false} %>
    <%= f.input :video_url %>
    <%= f.input :sleep_time %>
    <%= f.input :video_duration %>
    <%= f.input :chatter, as: :select, collection: Message.chatters, input_html: {class: 'chosen-select', :data => {:placeholder => "Option auswählen"}, multiple: false} %>
    <%= f.input :starting_point, as: :select, collection: Message.starting_points, input_html: {class: 'chosen-select', :data => {:placeholder => "Option auswählen"}, multiple: false} %>
    <%= f.input :target_message_id, as: :select, collection: Message.all, input_html: {class: 'chosen-select', :data => {:placeholder => "Option auswählen"}, multiple: false} %>
    <%= f.input :dead_end_breaker, as: :select, collection: Message.dead_end_breaker_options, input_html: {class: 'chosen-select', :data => {:placeholder => "Option auswählen"}, multiple: false} %>

    <%#= f.input :target_message_id_for_option, as: :select, collection: Message.all, input_html: {class: 'chosen-select', :data => {:placeholder => "Option auswählen"}, multiple: false} %>
    <%= f.input :parent_id, as: :select, collection: Message.all, input_html: {class: 'chosen-select', :data => {:placeholder => "Option auswählen"}, multiple: false} %>
    <%= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
