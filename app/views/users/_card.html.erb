<div class="card b-color my-4 h-100">
  <div class="row no-gutters">
    <div class="col-md-8">
      <div class="card-body">
        <table class="table">
        <tbody>
          <% User.showable_attribute_names.each do |name| %>
            <tr>
              <td>
                <strong><%= User.human_attribute_name(name) %>: </strong>
              </td>
              <td>
                <%= user.send(name) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
    <div class="col-md-4">
      <% if user.cover.attached? %>
          <%= image_tag user.cover, class: "card-img mx-auto" %>
      <% else %>
          <%= image_tag "portrait_placeholder.png", class: "card-img mx-auto" %>
      <% end %>
    </div>

  </div>
</div>
